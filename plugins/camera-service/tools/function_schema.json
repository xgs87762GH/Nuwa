[
  {
    "name": "take_photo",
    "description": "拍摄单张照片, 支持自定义文件名、图像质量和临时相机参数覆盖。",
    "input_schema": {
      "type": "object",
      "properties": {
        "filename": {
          "type": "string",
          "default": null,
          "description": "照片保存文件名（不含扩展名）。"
        },
        "quality": {
          "type": "integer",
          "minimum": 1,
          "maximum": 100,
          "default": 95,
          "description": "JPEG 图像质量等级 (1-100)。数值越高质量越好但文件越大。"
        },
        "photo_params": {
          "type": "object",
          "default": null,
          "description": "照片拍摄参数配置，如果未指定参数分两种情况：1）非必填参数，则不传入该参数；2）必填参数，则使用默认参数。",
          "properties": {
            "camera_id": {
              "type": "integer",
              "default": 0,
              "description": "相机设备ID (0为默认相机)"
            },
            "width": {
              "type": "integer",
              "minimum": 320,
              "maximum": 4096,
              "default": null,
              "description": "画面宽度像素 (320-4096)"
            },
            "height": {
              "type": "integer",
              "minimum": 240,
              "maximum": 4096,
              "default": null,
              "description": "画面高度像素 (240-4096)"
            },
            "brightness": {
              "type": "number",
              "minimum": 0.0,
              "maximum": 1.0,
              "default": null,
              "description": "亮度调节 (0.0-1.0)。0.0=最暗，0.5=标准，1.0=最亮"
            },
            "contrast": {
              "type": "number",
              "minimum": 0.0,
              "maximum": 1.0,
              "default": null,
              "description": "对比度调节 (0.0-1.0)。0.0=平坦，0.5=标准，1.0=锐利"
            },
            "saturation": {
              "type": "number",
              "minimum": 0.0,
              "maximum": 1.0,
              "default": null,
              "description": "饱和度调节 (0.0-1.0)。0.0=灰度，0.5=自然，1.0=鲜艳"
            },
            "hue": {
              "type": "number",
              "minimum": 0.0,
              "maximum": 1.0,
              "default": null,
              "description": "色调偏移 (0.0-1.0)。调节整体色彩倾向"
            },
            "gain": {
              "type": "number",
              "minimum": 0.0,
              "maximum": 10.0,
              "default": null,
              "description": "增益/ISO敏感度 (0.0-10.0)。数值越高暗光表现越好但噪点越多"
            },
            "exposure": {
              "type": "number",
              "minimum": -10.0,
              "maximum": 5.0,
              "default": null,
              "description": "曝光补偿 (-10.0 到 5.0)。负值=变暗，正值=变亮，0=自动"
            },
            "auto_focus": {
              "type": "boolean",
              "default": null,
              "description": "是否启用自动对焦。true=自动调节焦点，false=使用手动对焦值"
            },
            "focus": {
              "type": "number",
              "minimum": 0.0,
              "maximum": 1.0,
              "default": null,
              "description": "手动对焦值 (0.0-1.0)。仅在关闭自动对焦时生效。0.0=近焦，0.5=中距，1.0=远焦"
            }
          }
        }
      }
    }
  },
  {
    "name": "record_video",
    "description": "录制视频。支持自定义时长、文件名、编码格式和实时进度监控。可临时覆盖参数调节录制质量。",
    "input_schema": {
      "type": "object",
      "required": ["duration"],
      "properties": {
        "duration": {
          "type": "integer",
          "minimum": 1,
          "maximum": 3600,
          "description": "录制时长（秒），范围 1-3600 秒（1小时）。"
        },
        "filename": {
          "type": "string",
          "default": null,
          "description": "视频保存文件名（不含扩展名）。"
        },
        "codec_preference": {
          "type": "string",
          "enum": ["H264", "XVID", "MJPG", "auto"],
          "default": "H264",
          "description": "视频编码格式偏好。H264=兼容性最佳，XVID=文件较小，MJPG=处理最快，auto=自动选择。"
        },
        "video_params": {
          "type": "object",
          "default": null,
          "description": "视频录制参数配置",
          "properties": {
            "camera_id": {
              "type": "integer",
              "default": 0,
              "description": "相机设备ID (0为默认相机)"
            },
            "width": {
              "type": "integer",
              "minimum": 320,
              "maximum": 4096,
              "default": null,
              "description": "画面宽度像素 (320-4096)"
            },
            "height": {
              "type": "integer",
              "minimum": 240,
              "maximum": 4096,
              "default": null,
              "description": "画面高度像素 (240-4096)"
            },
            "fps": {
              "type": "number",
              "minimum": 1.0,
              "maximum": 120.0,
              "default": null,
              "description": "帧率设置 (1.0-120.0 fps)。影响视频录制流畅度，常用值：24/30/60 fps"
            },
            "brightness": {
              "type": "number",
              "minimum": 0.0,
              "maximum": 1.0,
              "default": null,
              "description": "亮度调节 (0.0-1.0)。影响整个视频亮度"
            },
            "contrast": {
              "type": "number",
              "minimum": 0.0,
              "maximum": 1.0,
              "default": null,
              "description": "对比度调节 (0.0-1.0)。影响视频对比度和清晰度"
            },
            "saturation": {
              "type": "number",
              "minimum": 0.0,
              "maximum": 1.0,
              "default": null,
              "description": "饱和度调节 (0.0-1.0)。0.0=灰度，0.5=自然，1.0=鲜艳"
            },
            "hue": {
              "type": "number",
              "minimum": 0.0,
              "maximum": 1.0,
              "default": null,
              "description": "色调偏移 (0.0-1.0)。调节整体色彩倾向"
            },
            "gain": {
              "type": "number",
              "minimum": 0.0,
              "maximum": 10.0,
              "default": null,
              "description": "增益/ISO敏感度 (0.0-10.0)。数值越高暗光表现越好但噪点越多"
            },
            "exposure": {
              "type": "number",
              "minimum": -10.0,
              "maximum": 5.0,
              "default": null,
              "description": "曝光补偿 (-10.0 到 5.0)。负值=变暗，正值=变亮，0=自动"
            },
            "auto_focus": {
              "type": "boolean",
              "default": null,
              "description": "是否启用自动对焦。true=自动调节焦点，false=使用手动对焦值"
            },
            "focus": {
              "type": "number",
              "minimum": 0.0,
              "maximum": 1.0,
              "default": null,
              "description": "手动对焦值 (0.0-1.0)。仅在关闭自动对焦时生效。0.0=近焦，0.5=中距，1.0=远焦"
            }
          }
        },
        "progress_callback": {
          "type": "boolean",
          "default": false,
          "description": "是否启用录制进度实时输出。启用后返回详细进度日志。"
        }
      }
    }
  },
  {
    "name": "batch_photos",
    "description": "批量连续拍摄多张照片。支持自定义拍摄间隔、文件名模式和统一图像参数。",
    "input_schema": {
      "type": "object",
      "required": ["count"],
      "properties": {
        "count": {
          "type": "integer",
          "minimum": 1,
          "maximum": 100,
          "description": "拍摄照片数量 (1-100 张)。"
        },
        "interval": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 60.0,
          "default": 1.0,
          "description": "拍摄间隔时间（秒，0.0-60.0）。0.0=连续快拍，1.0-5.0=常规间隔，10.0+=延时摄影。"
        },
        "quality": {
          "type": "integer",
          "minimum": 1,
          "maximum": 100,
          "default": 95,
          "description": "统一JPEG质量等级 (1-100)，应用于所有照片。"
        },
        "filename_pattern": {
          "type": "string",
          "default": "batch_",
          "description": "文件名前缀。系统会自动添加序号生成完整文件名。"
        },
        "photo_params": {
          "type": "object",
          "default": null,
          "description": "批量拍摄参数配置",
          "properties": {
            "camera_id": {
              "type": "integer",
              "default": 0,
              "description": "相机设备ID (0为默认相机)"
            },
            "width": {
              "type": "integer",
              "minimum": 320,
              "maximum": 4096,
              "default": null,
              "description": "画面宽度像素 (320-4096)"
            },
            "height": {
              "type": "integer",
              "minimum": 240,
              "maximum": 4096,
              "default": null,
              "description": "画面高度像素 (240-4096)"
            },
            "brightness": {
              "type": "number",
              "minimum": 0.0,
              "maximum": 1.0,
              "default": null,
              "description": "亮度调节 (0.0-1.0)，应用于所有照片"
            },
            "contrast": {
              "type": "number",
              "minimum": 0.0,
              "maximum": 1.0,
              "default": null,
              "description": "对比度调节 (0.0-1.0)，应用于所有照片"
            },
            "saturation": {
              "type": "number",
              "minimum": 0.0,
              "maximum": 1.0,
              "default": null,
              "description": "饱和度调节 (0.0-1.0)，应用于所有照片"
            },
            "hue": {
              "type": "number",
              "minimum": 0.0,
              "maximum": 1.0,
              "default": null,
              "description": "色调偏移 (0.0-1.0)，应用于所有照片"
            },
            "gain": {
              "type": "number",
              "minimum": 0.0,
              "maximum": 10.0,
              "default": null,
              "description": "增益/ISO敏感度 (0.0-10.0)，应用于所有照片"
            },
            "exposure": {
              "type": "number",
              "minimum": -10.0,
              "maximum": 5.0,
              "default": null,
              "description": "曝光补偿 (-10.0 到 5.0)，应用于所有照片"
            },
            "auto_focus": {
              "type": "boolean",
              "default": null,
              "description": "是否启用自动对焦，应用于所有照片"
            },
            "focus": {
              "type": "number",
              "minimum": 0.0,
              "maximum": 1.0,
              "default": null,
              "description": "手动对焦值 (0.0-1.0)，应用于所有照片"
            }
          }
        },
        "enable_progress": {
          "type": "boolean",
          "default": false,
          "description": "是否启用拍摄进度实时输出。启用后可监控批量拍摄进度。"
        }
      }
    }
  },
  {
    "name": "update_camera_parameters",
    "description": "更新相机全局参数设置。这些设置将影响后续所有拍照和录像操作，直到再次修改。",
    "input_schema": {
      "type": "object",
      "properties": {
        "camera_id": {
          "type": "integer",
          "default": null,
          "description": "相机设备ID (0为默认相机)"
        },
        "output_dir": {
          "type": "string",
          "default": null,
          "description": "输出目录路径"
        },
        "width": {
          "type": "integer",
          "minimum": 320,
          "maximum": 4096,
          "default": null,
          "description": "全局画面宽度像素 (320-4096)。与高度共同决定分辨率。常用：640、1280、1920。"
        },
        "height": {
          "type": "integer",
          "minimum": 240,
          "maximum": 4096,
          "default": null,
          "description": "全局画面高度像素 (240-4096)。与宽度共同决定分辨率。常用：480、720、1080。"
        },
        "brightness": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0,
          "default": null,
          "description": "全局亮度设置 (0.0-1.0)。0.0=最暗，0.5=中等，1.0=最亮。"
        },
        "contrast": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0,
          "default": null,
          "description": "全局对比度设置 (0.0-1.0)。0.0=平坦，0.5=标准，1.0=锐利。"
        },
        "saturation": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0,
          "default": null,
          "description": "全局饱和度设置 (0.0-1.0)。0.0=灰度，0.5=自然，1.0=鲜艳。"
        },
        "hue": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0,
          "default": null,
          "description": "全局色调偏移 (0.0-1.0)。调节整体色彩倾向，0.0和1.0为自然色调，0.5为色调反转。"
        },
        "gain": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 10.0,
          "default": null,
          "description": "全局增益/ISO敏感度 (0.0-10.0)。类似相机ISO设置，数值越高暗光表现越好但噪点越多。"
        },
        "exposure": {
          "type": "number",
          "minimum": -10.0,
          "maximum": 5.0,
          "default": null,
          "description": "全局曝光补偿 (-10.0 到 5.0)。负值使图像变暗，正值使图像变亮，0为自动曝光。"
        },
        "fps": {
          "type": "number",
          "minimum": 1.0,
          "maximum": 120.0,
          "default": null,
          "description": "全局帧率设置 (1.0-120.0 fps)。影响视频录制流畅度，常用值：24/30/60 fps。"
        },
        "auto_focus": {
          "type": "boolean",
          "default": null,
          "description": "是否启用自动对焦。true=自动调节焦点，false=使用手动对焦值。"
        },
        "focus": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0,
          "default": null,
          "description": "手动对焦值 (0.0-1.0)。仅在关闭自动对焦时生效。0.0=近焦，0.5=中距，1.0=远焦。"
        }
      }
    }
  },
  {
    "name": "get_camera_info",
    "description": "获取相机完整状态信息和配置详情。包括当前参数设置、分辨率、帧率、可用性状态等。",
    "input_schema": {
      "type": "object",
      "properties": {}
    }
  },
  {
    "name": "test_camera",
    "description": "执行相机功能测试。检测相机可访问性、画面捕获能力和基本性能参数。",
    "input_schema": {
      "type": "object",
      "properties": {}
    }
  },
  {
    "name": "reset_to_camera_defaults",
    "description": "重置所有相机参数为系统默认值。清除所有手动设置，让相机恢复到默认配置状态。",
    "input_schema": {
      "type": "object",
      "properties": {}
    }
  }
]