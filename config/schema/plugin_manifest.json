{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Plugin Manifest",
  "type": "object",
  "required": ["name", "version", "description", "mcp_version", "entry_point"],
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9-]*$",
      "description": "Plugin name in kebab-case"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version"
    },
    "description": {
      "type": "string",
      "maxLength": 500,
      "description": "Plugin description"
    },
    "mcp_version": {
      "type": "string",
      "enum": ["1.0.0", "1.1.0"],
      "description": "Supported MCP protocol version"
    },
    "entry_point": {
      "type": "string",
      "description": "Main module entry point"
    },
    "author": {
      "type": "object",
      "properties": {
        "name": {"type": "string"},
        "email": {"type": "string", "format": "email"},
        "url": {"type": "string", "format": "uri"}
      }
    },
    "license": {"type": "string"},
    "keywords": {
      "type": "array",
      "items": {"type": "string"}
    },
    "dependencies": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9-_]+$": {"type": "string"}
      }
    },
    "capabilities": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["tools", "prompts", "resources", "sampling"]
      }
    },
    "tools": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "description"],
        "properties": {
          "name": {"type": "string"},
          "description": {"type": "string"},
          "inputSchema": {"type": "object"}
        }
      }
    }
  }
}

